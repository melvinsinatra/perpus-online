<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/light_yellow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/bookList_image_card"
                android:layout_width="66dp"
                android:layout_height="75dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/bookList_bookCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/bookList_bookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/bookList_image_card"
                android:text="Book Title"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookList_bookAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookList_bookTitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/bookList_image_card"
                android:text="Book Author"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookList_bookSynopsis"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@id/bookList_bookAuthor"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/bookList_image_card"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec eget tortor in turpis ultricies hendrerit. Cras maximus posuere lacus nec consequat. In hac habitasse platea dictumst. In ultricies tincidunt quam in lobortis. Etiam eu neque ac purus placerat consequat sit amet quis velit. Quisque id nisi vitae ipsum luctus pharetra. In at neque et mauris vehicula aliquam. Curabitur finibus ipsum vel elementum ullamcorper."
                android:textColor="@color/black"
                android:textSize="11dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookList_bookSynopsis"
                android:layout_toRightOf="@id/bookList_image_card"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="....."
                android:textSize="11dp"
                android:textColor="@color/black"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>